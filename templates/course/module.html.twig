{% extends 'base.html.twig' %}

{% block title %}{{ module.title }}{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <a class="link" href="{{ path('courses_show', { id: course.id }) }}">‚Üê {{ course.title }}</a>

            <div class="card" style="margin-top: 20px;">
                <div class="card__body">
                    <h1>{{ module.title }}</h1>

                    {% if module.videoUrl %}
                        <div style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;border-radius:12px;margin:20px 0;">
                            <iframe
                                src="{{ module.videoUrl }}"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen
                                style="position:absolute;top:0;left:0;width:100%;height:100%;">
                            </iframe>
                        </div>
                    {% endif %}

                    <div style="margin-top: 20px; line-height: 1.7;">
                        {{ module.content|raw }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
