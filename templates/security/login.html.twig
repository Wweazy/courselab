{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login_title'|trans }}{% endblock %}

{% block body %}
<section class="section">
    <div class="container" style="max-width: 420px;">
        <h1>{{ 'auth.login_title'|trans }}</h1>

        {% if error %}
            <p style="color: #ff7b7b;">{{ 'auth.login_error'|trans }}</p>
        {% endif %}

        <form method="post">
            <div class="card" style="margin-top: 16px;">
                <div class="card__body">
                    <label>{{ 'auth.email'|trans }}</label>
                    <input type="email" name="email" required value="{{ last_username }}" style="width:100%; padding:10px; margin-top:6px; border-radius:8px; border:1px solid #26304f; background:#0f1424; color:white;">

                    <label style="margin-top:12px; display:block;">{{ 'auth.password'|trans }}</label>
                    <input type="password" name="password" required style="width:100%; padding:10px; margin-top:6px; border-radius:8px; border:1px solid #26304f; background:#0f1424; color:white;">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn--primary" style="margin-top:16px;">{{ 'auth.login_btn'|trans }}</button>
                </div>
            </div>
        </form>

        <p style="margin-top:16px;">
            {{ 'auth.no_account'|trans }} <a class="link" href="{{ path('app_register') }}">{{ 'auth.register_link'|trans }}</a>
        </p>
    </div>
</section>
{% endblock %}
